@model IEnumerable<CRUD_Front_Controller.Models.Image>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <table class="table table-bordered">
                <tr class="text-center">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
                @foreach (var data in Model)
                {
                    <tr class="text-center">
                        <td>@data.Id</td>
                        <td>@data.Name</td>
                        <td><img src="@data.ImagePath" height="100px;" width="100px;"/> </td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-controller="Upload" asp-action="Edit"
                            asp-route-id="@data.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Upload" asp-action="Delete"
                            asp-route-id="@data.Id">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>