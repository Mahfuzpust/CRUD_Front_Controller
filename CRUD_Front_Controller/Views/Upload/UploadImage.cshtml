@model CRUD_Front_Controller.Models.ViewModel.ImageCreateModel
@{
    ViewData["Title"] = "UploadImage";
}

<h1>UploadImage</h1>

<a class="btn btn-sm btn-primary m-2" asp-controller="Home" asp-action="Index">Back</a>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-action="UploadImage" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name"/>
                    <span class ="text-danger" asp-validation-for="Name"></span>
                 </div>

                 <div class="form-group">
                    <label asp-for="ImagePath"></label>
                    <input type="file" asp-for="ImagePath" class="form-control"/>
                    <span class="text-danger" asp-validation-for="ImagePath"></span>
                 </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn-group-sm btn-primary my-2 float-end"/>
                </div>

             </form>
        </div>
    </div>
</div>

