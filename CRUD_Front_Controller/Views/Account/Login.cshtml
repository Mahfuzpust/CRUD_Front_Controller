@model CRUD_Front_Controller.Models.ViewModel.LoginSignUpViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div container>
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border border-primary rounded p-lg-5 pb-5 pr-5">
            <div class="text-center">
                <a class="text-light btn btn-primary font-weight-bold" asp-action="SignUp" asp-controller="Account">SignUp</a>
                <a class="text-light btn btn-primary font-weight-bold" asp-action="Login" asp-controller="Account">Login</a>
            </div>
            <form methos="post" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" placeholder="Enter your name" class="form-control" autocomplete="off"/>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input id="password" type="password" asp-for="Password" placeholder="Enter your name" class="form-control" autocomplete="off"/>
                    <i id="open" class="fa-sharp fa-solid fa-eye float-end" style="margin-top:-25px; margin-right: 6px; cursor:pointer"></i>
                    <i id="closed" class="fa-sharp fa-solid fa-eye-slash float-end" style="margin-top:-25px; margin-right: 6px; cursor:pointer"></i>
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="IsRemember"/>
                    <label asp-for="IsRemember"></label>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary mb-2" value="Login"/>
                </div>
            </form>
            <div class="text-center">
                <a class="text-primary" asp-action="FotgotUsername?">Fotgot Username</a>  <a class="text-primary" asp-action="FotgotPassword?">Fotgot Password</a>
            </div>
        </div>
    </div>
</div>


<script src="~/js/passopenhide.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
$(document).ready(function () {
    $("#open").click(function () {
        $("#open").hide();
        $("#closed").show();
        $("#password").attr("type", "text");
    });
    $("#closed").click(function () {
        $("#closed").hide();
        $("#open").show();
        $("#password").attr("type", "text");
    });
});
</script>

