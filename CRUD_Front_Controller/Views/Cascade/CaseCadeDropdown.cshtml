
@{
    ViewData["Title"] = "CaseCadeDropdown";
}
<a class="btn btn-sm btn-primary m-2" asp-controller="Home" asp-action="Index">Back</a>

<h1>CaseCadeDropdown</h1>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post">
                <div class="form-group">
                    <label>Country</label>
                    <select class="form-control mt-2 mb-2" id="Country">
                        <option>--Select Country--</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>State</label>
                    <select class="form-control mt-2 mb-2" id="State">
                        <option>--Select State--</option>
                    </select>
                </div><div class="form-group">
                    <label>City</label>
                    <select class="form-control mt-2 mb-2" id="City">
                        <option>--Select City--</option>
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-primary float-end mt-2">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Cascade.js"></script>
